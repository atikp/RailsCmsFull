
%html
  %head
    %meta(charset='utf-8')
    %title Atik Patel CMS/blog

    = csrf_meta_tags
    =stylesheet_link_tag "theme-image"
    :css
      body {
        background-image: url('https://pixabay.com/static/uploads/photo/2016/01/11/22/05/background-1134468_960_720.jpg');
        color: white;
      }
  %body
    .container
      =content_tag :div, notice, class: "flash bg-success" if notice
      =content_tag :div, alert, class: "flash bg-danger" if alert
      =render template: "_nav"
      = yield
