%h1 Types

%ul.table
  -@types.each do |type|
    %li.table
      =type.name
      =link_to "edit", edit_admin_type_path(type),class: "btn btn-primary"
      =link_to 'Destroy', admin_type_path(type), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger"
      %ol
        -type.field_definitions.each do |field|
          %li=field.key

%p
  =link_to "New Type", new_admin_type_path, class: "btn btn-primary"
